.btn

	font-family f_ventura_m
	font-size 24px
	border-radius 6px
	transition .3s ease all
.btn--light-white
	padding 8px 22px
	color c_celeste
	border 1px solid c_white
	&:hover
		background c_white
		color c_celeste
		border 1px solid c_celeste

.btn--light-white-active
	background c_white
	color c_celeste
	border 1px solid c_celeste

.btn--form
	color c_white
	border 1px solid c_celeste
	background c_celeste
	padding 8px 22px
	&:hover

		background c_white
		color c_celeste
		border 1px solid c_celeste
@media screen and (max-width 1500px)
	padding 6px 18px
