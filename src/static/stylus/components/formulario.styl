.container_formulario
	display flex
	background c_formulario
	justify-content center
	.cnt-image
		background-image url("../img/nosotros_fondo.png")
		background-size cover
		width 50%
		padding-right 30px
		.image
			float right
			margin-right 60px
			display flex
			align-items flex-end
			flex-direction column
			justify-content flex-end
		.text
			color c_celeste
			font-family f_kaushan_r
			font-size 80px
			text-align center

		figure
			margin-top -65px
			max-width 713px
	.cnt-formulario
		width 50%
		padding-left 60px
		padding-bottom 45px
		.formulario
			margin-top 60px
			max-width 900px
			padding-right 40px
			.cuentas
				margin-bottom 30px
				display flex
				justify-content space-between
				.cuenta
					margin 0px 5px
				h4
					color c_plomo_os
					font-size 16px
					text-align center
				h3
					color c_celeste
					font-family f_ventura_m
					font-size 24px
			h2
				color c_celeste
				font-size 35px
				text-align center
				font-family f_ventura_m
				margin-bottom 20px
			p
				font-size 15px
				font-family f_gothan_l
				color c_plomo_os
			form
				.btn--pop

					display block
					text-align center
					margin auto
				.grid_botton
					display flex
					justify-content center
					margin-top 30px
					a
						min-width 230px
						text-align center
						margin 0px 30px
				.text
					margin-top 40px
					font-size 15px
					font-family f_gothan_l
					color c_plomo_os
					margin-bottom 36px
				.cnt-form

					.cnt-input
						display flex
						width 100%
						margin-bottom 35px

						.input
							width 100%
							position relative
							textarea
								height 20px
							label
								position absolute
								top 0
								left 0
								font-family f_gothan_l
								font-size 15px
								width 100%
								color c_plomo_os
								transition .3s ease all
							input, textarea
								width 100%
								color c_plomo_os
								position relative
								border none
								font-size 15px
								border-bottom 2px solid c_plomo_os
								background transparent
							&:after
								content ""
								width 0%
								position absolute
								border-bottom 2px solid c_celeste
								left 0
								height 1px
								bottom 0
								transition 1s ease all
						.input-m
							width 50%
						.input-m:first-child
							margin-right 40px

						.input-active
							label

								top -20px
							&:after
								width 100%
.pop_up_dona
	.cnt-image
		width 40%
	.cnt-formulario
		width 60%
@media screen and (max-width 1500px)
	.container_formulario
		.cnt-image

			figure
				max-width 500px
		.cnt-formulario
			padding-bottom 20px
			.formulario
				margin-top 30px
				max-width 650px
				form
					.grid_botton
						margin-top 20px
						a
							min-width 200px
							margin 0px 20px
							font-size 22px
					.text
						margin-top 30px
						margin-bottom 30px


					.cnt-form .cnt-input
						margin-bottom 27px
@media screen and (max-width 1200px)
	.container_formulario
		.cnt-image
			width 40%
			display none
		.cnt-formulario
			width 90%
			padding-left 0
			.formulario
				padding-right 0
				max-width 100%
				form
					.text
						margin-top 10px
@media screen and (max-width 768px)
	.container_formulario .cnt-formulario .formulario form .grid_botton
		flex-wrap wrap
		.btn
			margin-bottom 15px
@media screen and (max-width 480px)
	.container_formulario .cnt-formulario .formulario form .cnt-form .cnt-input
			flex-wrap wrap
			.input-m:first-child
				margin-bottom 27px
			.input-m:first-child, .input-m
				margin-right 0
				width 100%
