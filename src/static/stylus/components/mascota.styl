.list_mascotas
    display flex

    &__mascota--celeste
        &:hover
            background-image url("../img/back_celeste.png")
            background-size cover
            background-position center center
            background-repeat no-repeat
            .list_mascotas__title
                color c_white
            .list_mascotas__etiqueta
                h4
                    color c_white
                    background-image url("../img/mas_hover.png")
                    background-position 0 2px


                    &:before
                        opacity 1
                        color c_celeste
                    &:after
                        background c_celeste
        .list_mascotas__title
            color c_celeste
        .list_mascotas__etiqueta
            h4
                background-image url("../img/mas_celeste.png")
                background-size contain
                background-repeat no-repeat repeat
                color c_white
                &:after
                    background c_white
