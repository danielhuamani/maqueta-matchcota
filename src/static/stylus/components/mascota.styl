    &__mascota
        text-align center
        width 20%
        margin 8px
        box-sizing border-box
        padding 30px 5px 0px 5px

        position relative
        transition .3s ease all
        display flex
        flex-direction column
        align-items center
        justify-content center
        figure
            margin 0
            margin auto
            img
                width 100%
                height auto
                display block
    &__title
        display block
        font-size 30px
        font-family f_ventura_m
    &__etiqueta
        position absolute
        left 0
        margin auto
        right 0
        bottom 10px
        align-items center
        justify-content center
        display flex

        text-align left
        h4
            box-sizing border-box
            padding 15px 20px 15px 35px
            width 78%
            margin-bottom 15px
            font-size 14px
            font-family f_gothan_b
            margin 0
            position relative
            z-index 2
            transition .3s ease all
            &:before
                content "ADÃ“PTA A TU MEJOR AMIGO"
                transition .3s ease all
                position absolute
                z-index 3
                left 34px
                top 2px
                display flex
                align-items center
                bottom 0
                padding-right 20px
                margin auto
                opacity 0
                font-size 14px

            &:after
                content ""
                transition .3s ease all
                left 8px
                top 0px
                bottom 0
                margin auto
                position absolute
                z-index  2
                width 10px
                height 10px
                border-radius 50%

