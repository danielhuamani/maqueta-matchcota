.listado_noticias
    display flex
    justify-content center
    flex-wrap wrap


    &__noticia
        margin 2px 2px
        border-left 1px solid transparent
    &__noticia:nth-child(odd)
        flex-direction column
        background c_amarillo
        transition .3s ease all
        border-left 1px solid transparent
        border-right 1px solid transparent
        border-bottom 1px solid transparent
        border-top 1px solid transparent
        .descripcion
            transition .3s ease all
            &:after

                content ""
                transition .3s ease all
                top -32px
                border-top 16px solid transparent !important
                border-bottom 16px solid c_amarillo
                width 0
                position absolute
                left 0
                right 0
                margin auto
        &:hover
            border-left 1px solid c_amarillo
            border-right 1px solid c_amarillo
            border-bottom 1px solid c_amarillo
            border-top 1px solid c_amarillo
            background c_white
            .descripcion
                background c_white
                &:after

                    border-bottom 16px solid c_white !important
                    border-top 16px solid transparent

                h3
                    color c_amarillo
                h4
                    color c_amarillo
                p
                    color c_amarillo
    &__noticia:nth-child(even)
        flex-direction column-reverse
        background c_celeste
        transition .3s ease all
        border-left 1px solid transparent
        border-right 1px solid transparent
        border-bottom 1px solid transparent
        border-top 1px solid transparent
        .descripcion
            transition .3s ease all
            &:after
                content ""
                width 0
                position absolute
                left 0
                right 0
                margin auto
                bottom -32px
                border-top 16px solid c_celeste
                border-bottom 16px solid transparent !important


        &:hover
            border-left 1px solid c_celeste
            border-right 1px solid c_celeste
            border-bottom 1px solid c_celeste
            border-top 1px solid c_celeste
            background c_white
            .descripcion
                &:after
                    border-top 16px solid c_white !important
                    border-bottom 16px solid transparent !important
                h3
                    color c_celeste
                h4
                    color c_celeste
                p
                    color c_celeste
    &__noticia:nth-child(odd), &__noticia:nth-child(even)
        width 228px
        display flex
        figure
            width 228px
            height 204px
            margin 0
            img
                height 100%
        .descripcion
            background transparent
            display block
            position relative
            box-sizing border-box
            padding 30px 10px 10px 10px
            &:after
                transition .3s ease all
                border-left 16px solid transparent
                border-right 16px solid transparent
            h3
                color c_white
                font-family f_ventura_m
                font-size 18px

            h4
                color c_white
                font-size 18px
                font-family f_gothan_m
                margin 0
            p
                color c_white
                font-size 18px
                font-family f_gothan_l

