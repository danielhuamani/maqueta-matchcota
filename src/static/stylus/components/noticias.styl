.home_listado_noticias
    .listado_noticias__large
        position relative
        display block
        width 429px
        height 410px
        figure
            width 100%
            height 100%
            margin 0
        .descripcion
            display none
            flex-direction column
            padding 0px 30px
            box-sizing border-box
            justify-content flex-end
            position absolute
            left 0
            top 0
            width 100%
            height 100%
            background rgba(0,0,0,0.5) !important

            h3
                color c_white !important
                font-family f_ventura_m
                font-size 20px
            h4
                color c_white !important
                font-size 18px
                font-family f_gothan_m
                margin 0
            p
                color c_white !important
                font-size 18px
                font-family f_gothan_l
            &:after
                display none
        &:hover
            .descripcion
                display flex
                animation fadeEffect 0.5s

.listado_noticias
    display flex
    justify-content center
    flex-wrap wrap


    &__noticia
        margin 2px 2px

    &__noticia:nth-child(odd)
        flex-direction column
        transition .3s ease all

        .descripcion
            background c_amarillo
            transition .3s ease all
            &:after

                content ""
                transition .3s ease all
                top -30px
                border-top 16px solid transparent !important
                border-bottom 16px solid c_amarillo
                width 0
                position absolute
                left 0
                right 0
                margin auto
        &:hover


            .descripcion
                background c_white
                background c_white
                border-left 1px solid c_amarillo
                border-right 1px solid c_amarillo
                border-bottom 1px solid c_amarillo
                box-sizing border-box
                &:after

                    border-bottom 16px solid c_white !important
                    border-top 16px solid transparent

                h3
                    color c_amarillo
                h4
                    color c_amarillo
                p
                    color c_amarillo
    &__noticia:nth-child(even)
        flex-direction column-reverse

        transition .3s ease all

        .descripcion
            transition .3s ease all
            background c_celeste
            &:after
                content ""
                width 0
                position absolute
                left 0
                right 0
                margin auto
                bottom -30px
                border-top 16px solid c_celeste
                border-bottom 16px solid transparent !important


        &:hover

            .descripcion
                background c_white
                border-left 1px solid c_celeste
                border-right 1px solid c_celeste
                border-top 1px solid c_celeste
                box-sizing border-box
                &:after
                    border-top 16px solid c_white !important
                    border-bottom 16px solid transparent !important
                h3
                    color c_celeste
                h4
                    color c_celeste
                p
                    color c_celeste
    &__noticia
        width 228px
        display flex
        figure
            width 228px
            height 204px
