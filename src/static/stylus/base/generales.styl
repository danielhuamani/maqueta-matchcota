a
    margin 0
    outline none
.container
    width 98%
    max-width 1200px
    margin auto
.container--r-small
    max-width 1200px
.container--small
    max-width 1100px
.container--large
    max-width 1800px
.container--r-large
    max-width 1900px
.title_section
    h2
        font-size 35px
        font-family f_ventura_m
        text-align center
        position relative
        display inline-block
.title_colores
    text-align center
    h2.celeste
        display inline-block

        font-size 35px
        color c_celeste
        position relative
        font-family f_ventura_m
        span.naranja
            color c_narana_ad

.title_section--celeste
    text-align center
    h2

        color c_celeste
        &:after
            content ""
            position absolute
            bottom 0
            left calc(100% + 15px)
            background-image url("../img/flechitasleft.png")
            width 0px
            height 48px
            transition .3s ease all
        &:before
            content ""
            position absolute
            bottom -10px
            right calc(100% + 15px)
            background-image url("../img/flechitasright.png")
            width 0px
            transition .3s ease all
            height 48px
.home_mascotas--title--active
    h2

        &:after

            width 26px !important
        &:before
            width 26px !important

.d-flex
    display flex

.img_res
    display block
    width 100%
    height auto
.content_banner
    position relative
    z-index 150
    display flex
    padding 0px 15px
    justify-content center
    align-items center
    flex-direction column
    height 100%
    h2
        font-size 58px
        font-family f_ventura_m
        color c_white
        span.cuv_naran
            color c_narana_ad
        span
            font-family f_kaushan_r
            font-size 78px
    .text
        font-size 26px
        font-family f_ventura_m
        color c_white
.page
    width calc(100% - 105px)
    margin-left 105px
.wrapper
    position relative
    placeholder(color,famyli)
    ::-webkit-input-placeholder { color: color; font-family: famyli; } /* WebKit */
    :-moz-placeholder { color: color; font-family: famyli; } /* Firefox 18- */
    ::-moz-placeholder { color: color; font-family: famyli; } /* Firefox 19+ */
    :-ms-input-placeholder { color: color; font-family: famyli; } /* IE 10+ */


p
  font-family f_gothan_l
  font-size 14px
  color c_plomo_p
.overlay--active-pop
    z-index 310 !important
    display block !important
.overlay--active
    display block !important
.overlay
    display none
    position fixed
    left 0
    animation fadeEffect 0.5s
    top 0
    z-index 198
    background rgba(0,0,0,0.7)
    width 100%
    height 100%
.picture-border
    border-top 2px solid #fff
    border-left 2px solid #fff
    border-right 2px solid #a9a9ac
    border-bottom 2px solid #a9a9ac
    display inline-block
    box-shadow: 6px 6px 20px 1px #b9bbbe
    position relative
    z-index: 3
    .inner__picture
        border-top 14px solid #dbdbdb
        border-left 14px solid #d1d1d1
        border-right 14px solid #e6e6e6
        border-bottom 14px solid #d5d7d9
        display block
        img
            border-top 2px solid #b9bbbe
            border-left 2px solid #b9bbbe
            border-right 2px solid #fff
            border-bottom 2px solid #fff
            display block
.w10
    width 10%
.w20
    width 20%
.w30
    width 30%
.w40
    width 40%
.w50
    width 50%
.w60
    width 60%
.w70
    width 70%
.w80
    width 80%
.w90
    width 90%
.w100
    width 100%

@keyframes fadeEffect {
    from {opacity: 0;}
    to {opacity: 1;}
}

@keyframes fadeOutEffect {
    from {opacity: 1;}
    to {opacity: 0;}
}

@keyframes key_arrow_scroll {
    0% {margin-top: 0;}
    50% {margin-top: 10px;}
    100% {margin-top: 0px;}
}
@keyframes key_arrow_mas {
    0% {margin-left: 5px;}
    50% {margin-left: 15px;}
    100% {margin-left: 5px;}
}

@keyframes key_arrow_test_mas {
    0% {background-position: right center;}
    50% {background-position: left center;}
    100% {background-position: right center;}
}
@keyframes key_scale {
    0% {transform: scale(1);}
    50% {transform: scale(1.2);}
    100% {transform: scale(1);}
}
@media screen and (max-width 1500px)
    .container
        width 96%
@media screen and (max-width 768px)
    .title_colores h2.celeste
        font-size 30px
        &:after, &:before
            display none
    .page
        width 100%
        margin auto
    .title_section
        h2
            font-size 28px
    .content_banner
        h2
            font-size 36px
        span.cuv_naran
            font-size 52px
@media screen and (max-width 480px)

    .content_banner
        h2
            font-size 30px
        span.cuv_naran
            font-size 46px
