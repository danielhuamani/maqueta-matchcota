.noticias-detail
  padding 2.5em 0
  height auto
  overflow hidden
  .title
    text-align center
    margin-bottom 2.5em
    padding 2em 0 0
    h2
      display inline-block
      font-size 35px
      color c_narana_ad
      position relative
      font-family f_ventura_m
      color c_celeste
      &:after
        content ""
        background-image url("../img/nosotros_inf.png")
        width 33px
        height 34px
        position absolute
        top -35px
        right -40px
  .content-detail
    .image
      width 50%
      float left
      padding: 0 5% 0 0
      box-sizing border-box
      img
        float right
    .detail
      width 50%
      float right
      box-sizing border-box
      .date
        color c_plomo_os
        font-size 25px
        font-family f_ventura_m
        display block
        margin-bottom 1em
      h3
        color c_celeste
        font-size 30px
        font-family f_ventura_m
        margin-bottom 1em
    
  .view-more
    clear both
    padding 1.5em 0 1.5em     
    .ver_mas_noticias
      color c_plomo_os
      margin-top 40px
      margin-left 20%
      text-align left
      display block
      font-family f_ventura_m
      font-size 25px
      i
        margin-right 10px
      
.cnt-share
  text-align center
  padding-top: 1em
  .share-item 
    border 1px solid c_celeste
    border-radius 10px
    color c_celeste
    display: inline-block
    padding: 0.5em 1.5em
    span.text
      float left
      margin-top 0.65em
      font-weight 500
      font-family f_gothan_m
    i.icon
      border-radius 100%
      height 40px
      width 40px
      line-height 40px
      color #fff
      display inline-block
      font-size 25px
      margin-left 1em
    &.share-fb
      i.icon
        background c_azul
        color #fff
    
    