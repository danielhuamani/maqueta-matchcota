.nosotros_matchota_ideal
    margin-top 50px
    .container
        display flex
        justify-content center
        align-items flex-end
        figure.active-img
            bottom 0px !important
        figure
            position relative
            left 0
            bottom -360px
            transition 1s ease all
            z-index 20
            width 357px
            margin 0
        .cnt-descripcion
            margin-left 90px
            max-width 520px
            margin-top 60px
            margin-bottom 30px
            h2
                position relative
                font-size 28px
                font-family f_ventura_m
                color c_amarillo
                padding-left 27px
                padding-right 27px
                display inline-block
                &:after
                    content ""
                    position absolute
                    right 0
                    top -5px
                    background-image url("../img/nosotros_tright.png")
                    width 20px
                    height 37px
                    z-index 20
                &:before
                    content ""
                    position absolute
                    left 0
                    top 3px
                    background-image url("../img/nosotros_efec.png")
                    width 21px
                    height 36px
                    z-index 20
            .descripcion
                margin-top 45px
                font-size 21px
                font-family f_gothan_l
                color c_plomo_os
.nosotros_comillas
    position relative
    z-index 30
    background c_amarillo
    .descripcion
        position relative
        padding 50px 120px
        text-align center
        color c_white
        font-size 15px
        font-family f_gothan_l
        &:before
            content ""
            background-image url("../img/comillas_left.png")
            width 89px
            height 69px
            position absolute
            left 0
            top 0
        &:after
            content ""
            background-image url("../img/comillas_right.png")
            width 89px
            height 69px
            position absolute
            right 0
            bottom 0

.cnt-mision-vision
    position relative
    z-index 30

    .container
        width 100%
        display flex
        justify-content space-between

        figure
            width 34%
            margin 0
            position relative
            &:after
                content ""
                position absolute
                left 0
                top 0
                z-index 2
                width 100%
                height 100%
                background rgba(0,0,0,0.5)
            img
                height 100%
        .mision_vision
            width 33%
            background c_celeste
            border-left 1px solid c_white
            padding 50px 0px
            h2
                color c_white
                text-align center
                margin-bottom 35px
                font-size 20px
                font-family f_gothan_m
            .descripcion
                max-width 340px
                color c_white
                margin auto
                font-size 14px
                font-family f_gothan_l
                text-align center
            .icon-mision
                text-align center
                margin-bottom 40px
                font-size 80px
                color white


.nosotros_linea_tiempo
    padding-top 50px

    background-image url("../img/fondo_cuadricula.png")
    .container
        display flex
        justify-content center
        flex-direction column
        h2
            display flex
            justify-content center
            text-align center
            color c_celeste
            font-family f_ventura_m
            font-size 30px
            span
                margin 0
                margin-left 10px
                margin-top -8px
                font-size 50px
                color c_narana_ad
                font-family f_ventura_m
        .cnt_linea_tiempo
            margin-top 80px
            display flex
            justify-content center
            .bloque_1
                padding-right 110px
                position relative
                &:after
                    content ""
                    width 106px
                    height 51px
                    background-image url("../img/nos_ani_2.png")
                    position absolute
                    right 0
                    top 0
                .b_1_figure_active
                    opacity 1
                figure
                    opacity 0
                    transition 0.5s ease all
                    margin-bottom 7px
                    text-align center
                h3
                    text-align center
                    color c_nosotros
                    font-size 24px
                    font-family f_ventura_m
                    width 200px
                    span
                        color c_celeste
            .bloque_2
                margin-left 15px
                padding-right 20px
                figure
                    margin-top 10px
                    position relative
                    margin-left 10px
                    padding-right 20px
                    &:after
                        content ""
                        position absolute
                        right -30px
                        top 0
                        background-image url("../img/nos_ani_5.png")
                        width 80px
                        height 85px
                .descripcion
                    padding-right 120px
                    position relative
                    &:after
                        content ""
                        position absolute
                        right 0
                        top 0
                        width 106px
                        height 64px
                        background-image url("../img/nos_ani_3.png")

                    ul

                        li
                            margin-bottom 9px
                            font-size 13px
                            font-family f_gothan_l
                            color c_nosotros

            .bloque_3
                margin-left 15px

                h3
                    background-image url("../img/nos_ani_fondo.png")
                    background-repeat no-repeat
                    background-position center center
                    padding 15px 0px
                    color c_white
                    font-size 44px
                    font-family f_kaushan_r
                    text-shadow: 2px 0 0 c_nosotros, -2px 0 0 c_nosotros, 0 2px 0 c_nosotros, 0 -2px 0 c_nosotros, 1px 1px c_nosotros, -1px -1px 0 c_nosotros, 1px -1px 0 c_nosotros, -1px 1px 0 c_nosotros;
                    position relative
                    &:after
                        content ""
                        background-image url("../img/nos_ani_7.png")
                        width 112px
                        height 57px
                        position absolute
                        bottom -40px
                        right -50px
            .bloque_4
                margin-left 60px
                position relative
                width 110px
                &:after
                    content ""
                    position absolute
                    top -40px
                    right -100px
                    background-image url("../img/nos_ani_7_3.png")
                    width 113px
                    height 32px

                figure
                    text-align center
                h3
                    color c_nosotros
                    font-size 24px
                    font-family f_ventura_m
                    margin 0px
                    width 110px
            .bloque_5
                margin-left 80px
                figure
                    text-align center
                    margin-top 10px
                    position relative
                    &:after
                        content ""
                        position absolute
                        bottom -50px
                        right -60px
                        background-image url("../img/nos_ani_8_2.png")
                        width 104px
                        height 34px
                h3
                    color c_nosotros
                    font-size 24px
                    font-family f_ventura_m
                    margin 0
                    width 120px
            .bloque_6
                margin-left 50px
                position relative
                &:after
                    content ""
                    position absolute
                    bottom 20px
                    right -90px
                    background-image url("../img/nos_ani_11.png")
                    width 69px
                    height 131px
                figure
                    text-align center
                h3
                    text-align center
                    color c_nosotros
                    font-family f_ventura_m
                    font-size 30px
            .bloque_7
                margin-left 100px
                position relative
                &:after
                    content ""
                    background-image url("../img/corazon.png")
                    width 73px
                    height 70px
                    position absolute
                    left 63px
                    top -30px
                    animation key_scale 1.5s infinite
                h3:last-child
                    margin-left 50px
                    bottom -40px
                    top inherit
                h3
                    position absolute
                    left -30px
                    top -40px
                    margin 0
                    color c_nosotros
                    font-family f_ventura_m
                    font-size 38px
.nosotros_formulario
    margin-top 80px
    .btn--nosotros
        text-align center
        margin auto
        min-width 200px
        display block
.nosotros_socios_estrategicos
    margin-top 35px
    .container
        .title_colores
            margin-bottom 70px
            h2
                position relative
                &:after
                    content ""
                    background-image url("../img/rayas_celeste.png")
                    width 9px
                    height 10px
                    position absolute
                    left -12px
                    top -7px
                &:before
                    content ""
                    background-image url("../img/rayas_naranja.png")
                    width 9px
                    height 10px
                    position absolute
                    right -12px
                    bottom -7px
        .bx-wrapper
            margin auto
            margin-top 50px
            position relative
            .bx-controls
                .bx-prev
                    position absolute
                    left -50px
                    top 40px
                    width 35px
                    height 12px
                    background-image url("../img/flecha_naranja.png")
                    display block
                .bx-next
                    position absolute
                    right -40px
                    top 40px
                    width 35px
                    height 12px
                    background-image url("../img/flecha_celeste.png")
                    display block
@media screen and (max-width 1200px)
    .cnt-mision-vision .container figure
        display none
    .cnt-mision-vision .container .mision_vision .descripcion
        padding 0px 10px
        max-width 100%
    .cnt-mision-vision .container .mision_vision
        width 50%

    .nosotros_formulario .btn--nosotros
        font-size 18px
        min-width 150px
    .nosotros_matchota_ideal .container
        .cnt-descripcion .descripcion
            font-size 18px
    .nosotros_socios_estrategicos .container .bx-wrapper
        max-width 660px !important
@media screen and (max-width 960px)

    .nosotros_matchota_ideal .container
        .cnt-descripcion .descripcion
            margin-top 20px
    .nosotros_socios_estrategicos .container
        .title_colores
            margin-bottom 50px
        .bx-wrapper
            max-width 495px !important
            margin-top 20px
@media screen and (max-width 768px)
    .nosotros_socios_estrategicos .container .bx-wrapper
        max-width 330px !important
    .nosotros_matchota_ideal .container
        text-align center
        .cnt-descripcion
            margin-left 0
            margin-top 0
            .descripcion
                padding 0 10px
                text-align left

    .nosotros_comillas .descripcion
        padding 30px 20px
        &:after, &:before
            display none
    .nosotros_matchota_ideal .container figure
        display none
    .cnt-mision-vision .container
        flex-wrap wrap
        .mision_vision
            border-bottom 1px solid c_white
            border-left none
            width 100%
            padding 20px 0px
            .descripcion
                padding 0px 20px
            .icon-mision
                margin-bottom 20px
            h2
                margin-bottom 20px
@media screen and (max-width 480px)
    .nosotros_socios_estrategicos .container .bx-wrapper
        max-width 165px !important
