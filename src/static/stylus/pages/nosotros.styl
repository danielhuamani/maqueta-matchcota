                margin-bottom 40px
                font-size 80px
                color white


.nosotros_linea_tiempo
    padding-top 50px
    padding-bottom 50px
    background-image url("../img/fondo_cuadricula.png")
    .container
        display flex
        justify-content center
        flex-direction column
        h2
            display flex
            justify-content center
            text-align center
            color c_celeste
            font-family f_ventura_m
            font-size 30px
            span
                margin 0
                margin-left 10px
                margin-top -8px
                font-size 50px
                color c_narana_ad
                font-family f_ventura_m
        .cnt_linea_tiempo
            margin-top 40px
            padding-top 80px
            padding-bottom 50px
            display flex
            justify-content center

            .bloque_1
                width 180px

                position relative
                opacity 0
                transition 0.3s ease all
                margin-right 80px
                box-sizign border-box
                &:after
                    content ""
                    width 106px
                    height 51px
                    background-image url("../img/nos_ani_2.png")
                    position absolute
                    left 95%
                    top 0
                    opacity 0
                figure

                    margin-bottom 7px
                    text-align center
                h3
                    text-align center
                    color c_nosotros
                    font-size 24px
                    font-family f_ventura_m
                    width 200px
                    span
                        color c_celeste
            .b_1_active
                opacity 1
                &:after
                    opacity 1
            .bloque_2
                width 198px
                margin-left 10px
                padding-right 20px
                opacity 0
                figure
                    margin-top 20px
                    position relative
                    margin-left 10px
                    padding-right 20px
                    opacity 0
                    transition .8s ease all
                    &:after
                        content ""
                        position absolute
                        right -30px
                        top 0
                        background-image url("../img/nos_ani_5.png")
                        width 80px
                        height 85px
                        transition .3s ease all
                .descripcion
                    padding-right 120px
                    position relative
                    &:after
                        content ""
                        position absolute
                        left 80px
                        top 0
                        width 106px
                        height 64px
                        background-image url("../img/nos_ani_3.png")
                        transition 0.8s ease all

                    ul

                        li
                            margin-bottom 9px
                            font-size 13px
                            font-family f_gothan_l
                            color c_nosotros
            .b_2_active
                opacity 1
                figure
                    opacity 1

            .bloque_3
                margin-left 15px
                opacity 0
                h3
                    background-image url("../img/nos_ani_fondo.png")
                    background-repeat no-repeat
                    background-position center center
                    padding 15px 0px
                    color c_white
                    font-size 44px
                    font-family f_kaushan_r
                    text-shadow: 2px 0 0 c_nosotros, -2px 0 0 c_nosotros, 0 2px 0 c_nosotros, 0 -2px 0 c_nosotros, 1px 1px c_nosotros, -1px -1px 0 c_nosotros, 1px -1px 0 c_nosotros, -1px 1px 0 c_nosotros;
                    position relative
                    transition 0.5s ease all

                    &:after
                        content ""
                        background-image url("../img/nos_ani_7.png")
                        width 112px
                        height 57px
                        position absolute
                        bottom -80px
                        right -50px
            .b_3_active
                opacity 1

            .bloque_4
                margin-left 60px
                position relative
                width 110px
                opacity 0
                transition 1s ease all
                &:after
                    content ""
                    position absolute
                    top -40px
                    right -80px
                    background-image url("../img/nos_ani_7_3.png")
                    width 113px
                    height 32px

                figure
                    margin-bottom 15px
                    text-align center
                h3
                    color c_nosotros
                    font-size 24px
                    font-family f_ventura_m
                    margin 0px
                    width 110px
            .b_4_active
                opacity 1
            .bloque_5
                margin-left 80px
                opacity 0
                transition 0.8s ease all
                figure
                    text-align center
                    margin-top 10px
                    position relative
                    &:after
                        content ""
                        position absolute
                        bottom -65px
                        right -45px
                        background-image url("../img/nos_ani_8_2.png")
                        width 104px
                        height 34px
                h3
                    color c_nosotros
                    font-size 24px
                    font-family f_ventura_m
                    margin 0
                    width 120px
            .b_5_active
                opacity 1
            .bloque_6
                margin-left 50px
                position relative
                opacity 0
                transition 0.8s ease all
                width 130px
                &:after
                    content ""
                    position absolute
                    bottom 20px
                    right -90px
                    background-image url("../img/nos_ani_11.png")
                    width 69px
                    height 131px
                    display block
                figure
                    text-align center
                h3
                    text-align center
                    color c_nosotros
                    font-family f_ventura_m
                    font-size 30px
            .b_6_active
                opacity 1

            .bloque_7
                opacity 0
                transition 0.8s ease all
                margin-left 100px
                position relative
                &:after
                    content ""
                    background-image url("../img/corazon.png")
                    width 73px
                    height 70px
                    position absolute
                    left 63px
                    top -30px
                    animation key_scale 1.5s infinite
                h3:last-child
                    right 0
                    bottom -40px
                    top inherit
                    left inherit
                h3
                    position absolute
                    left -10px
                    top -70px
                    margin 0
                    color c_nosotros
                    font-family f_ventura_m
                    font-size 38px

            .b_7_active
                opacity 1
