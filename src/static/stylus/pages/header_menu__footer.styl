@import "../base/variables"


.header
    position absolute
    width calc(100% - 105px)
    left 105px
    z-index 2
    right 0
    top 25px
    margin auto
    &__logo_links
        display flex

        justify-content space-between
        figure
            margin 0
            margin-left 35px
        nav
            margin-top 20px
            margin-right 60px
            ul
                display flex
                li
                    a.adopta
                        background c_narana_ad

                    a
                        font-size 19px
                        padding 15px 12px
                        color c_white

.menu
    position fixed
    width 105px
    height 100%
    background c_white
    top 0
    left 0
    text-align center
    padding-top 45px
    .btn_menu
        font-size 16px
        cursor pointer
        font-family f_gothan_b
        color c_celeste
        .icon-menu
            margin-bottom 12px
            font-size 28px
            color c_celeste
