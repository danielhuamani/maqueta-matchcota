.home_banner
    position relative
    .juguete
        position absolute
        bottom -110px
        right 120px
        width 150px
        z-index 200
        height 159px
        &:before
            content ""
            background-image url("../img/juguete_left.png")
            width 17px
            height 28px
            position absolute
            right 145px
            bottom 75px
        &:after
            content ""
            background-image url("../img/juguete_right.png")
            width 20px
            height 26px
            position absolute
            right -5px
            bottom 30px

    .home_banner__slider_list

        &__item
            text-align center
            width 100%
            height 650px
            background-size cover
            background-position center center
            position relative
            display flex
            align-items center
            justify-content center

            &:after
                content ""
                width 100%
                top 0
                height 100%
                position absolute
                left 0
                right 0
                margin 0
                background-image url("../img/capa_banner.png")
                background-position center center
                z-index 100

.home_mascotas
    margin-top 38px
    margin-bottom 20px
    &__list_mascotas
        justify-content center
        margin-top 38px
.home_conoce_mascota
    margin-top 60px
    &__title
        font-size 25px
        font-family f_ventura_m
        color c_plomo_os
        text-align center
        i
            margin-right 10px
    .full_container
        background-image url("../img/ad.png")
        background-size cover
        .bloque_test_1
            .title
                h4
                    font-size 35px
                    color c_celeste
            figure
                padding 27px 29px 15px 30px
                background-image url("../img/bac_blo_1.png")
                width 237px
                height 240px
                margin 0
.home_siempre_informados
    margin-top 40px
    .ver_mas_noticias
        color c_plomo_os
        margin-top 40px
        text-align center
        display block
        font-family f_ventura_m
        font-size 25px
        i
            margin-right 10px
    .home_listado_noticias
        margin-top 40px
    .title
        text-align center
        h2
            display inline-block

            font-size 35px
            color c_narana_ad
            position relative
            font-family f_ventura_m
            span
                color c_celeste
            &:after
                content ""
                background-image url("../img/siempre_inf.png")
                width 33px
                height 34px
                position absolute
                top -35px
                right -40px

.home_nuestro_aliados
    margin-top 60px
    .bx-wrapper
        margin auto
        position relative
        .bx-controls
            .bx-prev
                position absolute
                left -50px
                top 40px
                width 35px
                height 12px
                background-image url("../img/flecha_naranja.png")
                display block
            .bx-next
                position absolute
                right -40px
                top 40px
                width 35px
                height 12px
                background-image url("../img/flecha_celeste.png")
                display block
        .listado_aliados
            &__item
                img
                    filter grayscale(100%)
                    margin auto
                    display block
                    transition 0.3s ease all
                &:hover
                    img
                        filter grayscale(0%)

    .title_colores
        margin-bottom 70px
        h2
            position relative
            &:after
                content ""
                background-image url("../img/rayas_celeste.png")
                width 9px
                height 10px
                position absolute
                left -12px
                top -7px
            &:before
                content ""
                background-image url("../img/rayas_naranja.png")
                width 9px
                height 10px
                position absolute
                right -12px
                bottom -7px
