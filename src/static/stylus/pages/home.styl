.home_banner
    position relative
    height 650px
    text-align center
    width 100%

    background-size cover
    background-position center center
    position relative
    display flex
    align-items center
    justify-content cente
    &:after
        content ""
        width 100%
        top 0
        height 100%
        position absolute
        left 0
        right 0
        margin 0
        background-image url("../img/capa_banner.png")
        background-position center center
        z-index 100
    .cnt_slide_home
        width 100%
        .home_banner__text_static
            padding 0
            .text_adoptar
                display flex
                align-items flex-end
                .bx-wrapper
                    min-width 210px
                    text-align left
                    /*.bx-viewport
                        height 75px !important*/
                h2
                    margin 0

                    margin-right 5px

    .arrow_scroll
        position absolute
        right 60px
        bottom 30px
        z-index 150
        cursor pointer
        height 85px
        display flex
        flex-direction column
        align-items flex-end
        span
            background-image url("../img/flecha_bottom.png")
            background-repeat no-repeat
            width 12px
            height 50px
            display block

            animation key_arrow_scroll 1.5s infinite
        h3
            margin-top 15px
            font-size 13px
            font-family f_gothan_b
            color c_white
    .juguete
        position absolute
        bottom -110px
        right 200px
        width 150px
        z-index 200
        height 159px
        &:before
            content ""
            background-image url("../img/juguete_left.png")
            width 17px
            height 28px
            position absolute
            right 145px
            bottom 78px
        &:after
            content ""
            background-image url("../img/juguete_right.png")
            width 20px
            height 26px
            position absolute
            right -5px
            bottom 30px

    .home_banner__slider_list
        .text_slide
                color c_narana_ad
                font-size 78px
                font-family f_kaushan_r

                display block
            h4
                margin 0
            span, p
                 color c_narana_ad
                 font-size 78px
                 font-family f_kaushan_r

                 display block
        &__item
            text-align center
            width 100%

            background-size cover
            background-position center center
            position relative
            display flex
            align-items center
            justify-content center



.home_mascotas
    padding-top 38px
    margin-bottom 20px
    &__list_mascotas
        justify-content center
        margin-top 38px
        margin-bottom 38px
    .home_conoce_mascota__title
        span.flecha

            background-image url("../img/ver_mas_noticias.png")
            width 50px
            margin-left 10px
            margin-bottom 3px
            background-repeat no-repeat
            height 11px
            display inline-block
        &:hover
            span.flecha
                animation key_arrow_test_mas 1.5s infinite
.home_conoce_mascota
    margin-top 60px
    position relative
    .testimonio_link
        position absolute
        right 20%
        bottom 20px
        z-index 2
        i
            font-size 32px
            color c_plomo_os
        span.text
            font-size 25px
            font-family f_ventura_m
            color c_plomo_os
        span.flecha

            background-image url("../img/ver_mas_noticias.png")
            width 50px
            margin-left 10px
            margin-bottom 3px
            background-repeat no-repeat
            height 11px
            display inline-block
        &:hover
            span.flecha
                animation key_arrow_test_mas 1.5s infinite

    .juguete_1
        top 4%
        position absolute
        z-index 2
        left -35px
        &:after
            content ""
            display block
            background-image url("../img/juguete_after.png")
            width 14px
            height 30px
            position absolute
            right 0px
            top 25%

    .juguete_2
        bottom -17%
        position absolute
        z-index 2
        left 200px
        animation juguete 1.4s infinite
    &__title
        font-size 25px
        font-family f_ventura_m
        color c_plomo_os
        text-align center
        i
            margin-right 10px
    .full_container
        background-image url("../img/trama.png")
        background-size cover
        /**/background-color #E5E5E5
        padding 1em 0 4em
        transform skew(0deg, 2.5deg)

        .container
            transform skew(0deg, -2.5deg)
            min-height 480px
            position relative
            .title_active
                h3
                    &:after, &:before
                        opacity 1 !important

            .title
                width 100%
                max-width 250px
                text-align center
                margin-bottom 3em
                margin-left 2em
                h4
                    display block
                    font-size 35px
                    color c_narana_ad
                    position relative
                    font-family f_ventura_m
                    color c_celeste
                h3
                    display block
                    font-size 44px
                    color #FF4612
                    position relative
                    font-family f_ventura_m
                    &:after
                        content ""
                        position absolute
                        display block
                        left 0
                        bottom 0
                        background-image url("../img/historia_left.png")
                        width 11px
                        height 11px
                        opacity 0
                        transition 0.4s ease all
                    &:before
                        content ""
                        position absolute
                        display block
                        right 0
                        top 0
                        background-image url("../img/historia_right.png")
                        width 11px
                        height 11px
                        opacity 0
                        transition 0.4s ease all

        .bloque_picture
            position absolute

            figure
                margin 0
            .text
                color c_plomo
                font-size 75px
                font-family f_kaushan_r
                position absolute
                z-index 2
            &.bloque_1
                position relative
                display inline-block

                .text
                    left -90px
                    bottom -70px
            &.bloque_2
                display inline-block
                left 32%
                top 2%
                .text
                    left -68px
                    bottom -80px
            &.bloque_3
                display inline-block
                left 32%
                top 65%
                .text
                    right -320px
                    top 20px
            &.bloque_4
                display inline-block
                left 51%
                top 20%
                .text
                    top -105px
                    right -58px
            &.bloque_5
                display inline-block
                right 3%
                top -10%

                a
                    position relative
                    &:before
                        display block
                        position absolute
                        content ""
                        bottom -90px
                        right -70px
                        background-image url("../img/flash.png")
                        width 62px
                        height 62px
                    &:after
                        display block
                        position absolute
                        content ""
                        bottom -60px
                        right -80px
                        background-image url("../img/circulo.png")
                        width 179px
                        height 173px
            a:hover
                span
                    &:after
                        opacity 1

                    &:before
                        background rgba(0,0,0,0.5)
            a
                position relative
                span
                    position relative
                    &:after
                        content "Ver Testimonio"
                        position absolute
                        max-width 100px
                        text-align center
                        left 0
                        right 0
                        margin auto
                        top 0
                        bottom 0
                        display flex
                        align-items center
                        justify-content center
                        color white
                        opacity 0
                        transition .3s ease all
                        font-size 18px
                    &:before
                        content ""
                        position absolute
                        width 102%
                        height 99%
                        left 0
                        transition .3s ease all
                        top 0

.home_siempre_informados
    margin-top 5em
    .ver_mas_noticias
        color c_plomo_os
        margin-top 40px
        text-align center
        display block
        font-family f_ventura_m
        font-size 25px

        i
            margin-right 10px
        span

            background-image url("../img/ver_mas_noticias.png")
            width 50px
            margin-left 10px
            margin-bottom 3px
            background-repeat no-repeat
            height 11px
            display inline-block
        &:hover
            span
                animation key_arrow_test_mas 1.5s infinite
    .home_listado_noticias
        margin-top 40px
    .title_active
        h2
            &:after
                opacity 1 !important
    .title
        text-align center
        h2
            display inline-block

            font-size 35px
            color c_narana_ad
            position relative
            font-family f_ventura_m
            span
                color c_celeste
            &:after
                content ""
                background-image url("../img/siempre_inf.png")
                width 33px
                height 34px
                position absolute
                top -35px
                right -40px
                opacity 0
                transition 0.5s ease all

.home_nuestro_aliados
    margin-top 60px
    .bx-wrapper
        margin auto
        position relative
        .bx-controls
            .bx-prev
                position absolute
                left -50px
                top 40px
                width 35px
                height 12px
                background-image url("../img/flecha_naranja.png")
                display block
            .bx-next
                position absolute
                right -40px
                top 40px
                width 35px
                height 12px
                background-image url("../img/flecha_celeste.png")
                display block
    .title_colores_animate
        h2
            &:after, &:before
                opacity 1 !important
    .title_colores
        margin-bottom 70px
        h2
            position relative
            &:after
                content ""
                background-image url("../img/rayas_celeste.png")
                width 9px
                height 10px
                position absolute
                left -12px
                top -7px
                opacity 0
                transition .3s ease all
            &:before
                content ""
                background-image url("../img/rayas_naranja.png")
                width 9px
                height 10px
                position absolute
                right -12px
                bottom -7px
                opacity 0
                transition .3s ease all
.listado_aliados
    &__item
        img
            filter grayscale(100%)
            margin auto
            display block
            transition 0.3s ease all
        &:hover
            img
                filter grayscale(0%)

@media screen and (max-width 1800px)
    .home_conoce_mascota .full_container .bloque_picture.bloque_1 .text
        left -20px
    .home_conoce_mascota .full_container .container .title
        margin-left 4em
@media screen and (max-width 1700px)
    .home_conoce_mascota .juguete_1
        display none
    .home_conoce_mascota .full_container
        .bloque_picture.bloque_1
            a span
                width 220px
        .bloque_picture.bloque_2
            a span
                width 150px
        .bloque_picture.bloque_3
            a span
                width 190px
        .bloque_picture.bloque_4
            a span
                width 250px
        .bloque_picture.bloque_5
            right 5px
            a:after, a:before
                display none
            a span
                width 220px
@media screen and (max-width 1500px)

    .home_banner
        height 500px
        .juguete
            right 120px
    .home_conoce_mascota .full_container .bloque_picture .text
        font-size 60px
    .home_siempre_informados
        .container--r-large
            max-width 1000px

@media screen and (max-width 1300px)
    .home_nuestro_aliados .bx-wrapper
        max-width 860px !important

@media screen and (max-width 1200px)
    .home_conoce_mascota .juguete_2
        display none
    .home_conoce_mascota .full_container
        .container
            .title
                margin auto
            .cnt-bloque
                position relative
        .bloque_picture.bloque_1
            a span
                width 200px
        .bloque_picture.bloque_2
            a span
                width 130px
        .bloque_picture.bloque_3
            top 95%
        .bloque_picture.bloque_4
            left 50%
            a span
                width 220px
        .bloque_picture.bloque_5
            right 0px
            top 20%
            a span
                width 180px
            a:after, a:before
                display none
    .home_banner
        .juguete
            bottom -115px
            width 120px
            &:before
                bottom 85px
                right 115px
            &:after
                bottom 45px
@media screen and (max-width 1100px)
    .home_nuestro_aliados .bx-wrapper
        max-width 540px !important
        figure
            width 170px !important
            img
                display block
                width 100%
                height auto
@media screen and (max-width 960px)
    .home_conoce_mascota .full_container .container .cnt-bloque
        margin-top 20px
        display flex
        flex-wrap wrap
        align-items center
        justify-content space-between
    .home_conoce_mascota .full_container .bloque_picture
        width 30%
        margin 10px
        position initial
        a span
            width 100% !important
        .text
            display none
    .home_banner
        height 400px
        .juguete
            display none

@media screen and (max-width 768px)
    .container_menu .menu_block .menu .icon-close
        right 20px
    .home_mascotas .list_mascotas
        margin-top 30px !important
    .home_banner .cnt_slide_home .home_banner__text_static .text_adoptar .bx-wrapper
        min-width 170px
    .home_siempre_informados .title h2
        &:after
            opacity 1 !important
    .home_conoce_mascota .full_container
        .bloque_picture.bloque_1, .bloque_picture.bloque_5
            display none
    .home_conoce_mascota .testimonio_link
        width 100%
        right 0
        text-align center
        span.text
            font-size 20px
    .home_conoce_mascota .full_container .container .title
        h4
            font-size 28px
        h3
            font-size 38px
    .home_siempre_informados .title h2
        font-size 30px
        &:after
            display none
    .home_banner .arrow_scroll
        left 0
        right 0
        display block
        text-align center
    .home_nuestro_aliados .bx-wrapper
        max-width 360px !important
    .home_conoce_mascota .full_container .container .cnt-bloque
        justify-content center
    .home_conoce_mascota .full_container .bloque_picture
        width 45%
@media screen and (max-width 480px)
    .home_banner .cnt_slide_home .home_banner__text_static
        margin-bottom 40px
    .home_conoce_mascota
        margin-top 30px
    .home_mascotas .home_conoce_mascota__title span.flecha
        display none
    .home_siempre_informados
        margin-top 40px
        .home_listado_noticias
            margin-top 20px
    .home_conoce_mascota .full_container
        .bloque_picture.bloque_4, .bloque_picture.bloque_5,
        .bloque_picture.bloque_3
            display none
    .home_conoce_mascota .full_container .bloque_picture
        width 65%
        a
            width 100%
    .home_banner
        height 360px
    .home_nuestro_aliados .bx-wrapper
        max-width 180px !important
    .home_banner .cnt_slide_home .home_banner__text_static .text_adoptar .bx-wrapper
        min-width 100px
    .home_conoce_mascota .full_container .container
        min-height inherit
