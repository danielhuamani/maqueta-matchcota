.home_banner
    position relative
    .arrow_scroll
        position absolute
        right 60px
        bottom 30px
        z-index 195
        cursor pointer
        height 85px
        display flex
        flex-direction column
        align-items flex-end
        span
            background-image url("../img/flecha_bottom.png")
            width 12px
            height 35px
            display block

            animation key_arrow_scroll 1.2s infinite
        h3
            margin-top 15px
            font-size 13px
            font-family f_gothan_b
            color c_white
    .juguete
        position absolute
        bottom -110px
        right 200px
        width 150px
        z-index 200
        height 159px
        &:before
            content ""
            background-image url("../img/juguete_left.png")
            width 17px
            height 28px
            position absolute
            right 145px
            bottom 78px
        &:after
            content ""
            background-image url("../img/juguete_right.png")
            width 20px
            height 26px
            position absolute
            right -5px
            bottom 30px

    .home_banner__slider_list
        &__item
            text-align center
            width 100%
            height 650px
            background-size cover
            background-position center center
            position relative
            display flex
            align-items center
            justify-content center

            &:after
                content ""
                width 100%
                top 0
                height 100%
                position absolute
                left 0
                right 0
                margin 0
                background-image url("../img/capa_banner.png")
                background-position center center
                z-index 100

.home_mascotas
    padding-top 38px
    margin-bottom 20px
    &__list_mascotas
        justify-content center
        margin-top 38px
        margin-bottom 38px
.home_conoce_mascota
    margin-top 60px
    &__title
        font-size 25px
        font-family f_ventura_m
        color c_plomo_os
        text-align center
        i
            margin-right 10px
    .full_container
        //background-image url("../img/ad.png")
        //background-size cover
        background-color #E5E5E5
        padding 1em 0 4em 
        transform skew(0deg, 2.5deg)
        
        .container
            transform skew(0deg, -2.5deg)
            min-height 480px
            position relative
            .title
                width 100%
                max-width 250px
                text-align center
                margin-bottom 3em
                h4
                    display block
                    font-size 35px
                    color c_narana_ad
                    position relative
                    font-family f_ventura_m
                    color c_celeste
                h3
                    display block
                    font-size 44px
                    color c_narana_ad
                    position relative
                    font-family f_ventura_m
                    color c_narana_ap
        .bloque_picture 
            position absolute           
            figure               
                margin 0
            .text
                color c_plomo
                font-size 65px
                font-family f_kaushan_r
                position absolute
                z-index 2
            &.bloque_1
                position relative
                display inline-block
                .text
                    left -115px
                    bottom -60px
            &.bloque_2
                display inline-block
                left 28%
                top 2%
                .text
                    left -40px
                    bottom -60px
            &.bloque_3
                display inline-block
                left 26%
                top 65%
                .text
                    right -270px
                    top 20px
            &.bloque_4
                display inline-block
                left 45%
                top 20%
                .text
                    top -90px
                    right -34px
            &.bloque_5
                display inline-block
                right 0
                top -10%

.home_siempre_informados
    margin-top 5em
    .ver_mas_noticias
        color c_plomo_os
        margin-top 40px
        text-align center
        display block
        font-family f_ventura_m
        font-size 25px
        i
            margin-right 10px
        span
            width 55px
            height 11px
            display inline-block
            animation key_arrow_mas 1.2s infinite
            margin-bottom 4px
            background-repeat no-repeat
            background-image url("../img/ver_mas_noticias.png")

    .home_listado_noticias
        margin-top 40px
    .title
        text-align center
        h2
            display inline-block

            font-size 35px
            color c_narana_ad
            position relative
            font-family f_ventura_m
            span
                color c_celeste
            &:after
                content ""
                background-image url("../img/siempre_inf.png")
                width 33px
                height 34px
                position absolute
                top -35px
                right -40px

.home_nuestro_aliados
    margin-top 60px
    .bx-wrapper
        margin auto
        position relative
        .bx-controls
            .bx-prev
                position absolute
                left -50px
                top 40px
                width 35px
                height 12px
                background-image url("../img/flecha_naranja.png")
                display block
            .bx-next
                position absolute
                right -40px
                top 40px
                width 35px
                height 12px
                background-image url("../img/flecha_celeste.png")
                display block

    .title_colores
        margin-bottom 70px
        h2
            position relative
            &:after
                content ""
                background-image url("../img/rayas_celeste.png")
                width 9px
                height 10px
                position absolute
                left -12px
                top -7px
            &:before
                content ""
                background-image url("../img/rayas_naranja.png")
                width 9px
                height 10px
                position absolute
                right -12px
                bottom -7px
.listado_aliados
    &__item
        img
            filter grayscale(100%)
            margin auto
            display block
            transition 0.3s ease all
        &:hover
            img
                filter grayscale(0%)
@media screen and (max-width 1500px)

    .home_banner
        .juguete
            right 120px
        .home_banner__slider_list__item
            height 500px
    .home_siempre_informados
        .container--r-large
            max-width 1000px

@media screen and (max-width 1300px)
    .home_nuestro_aliados .bx-wrapper
        max-width 860px !important

@media screen and (max-width 1200px)

    .home_banner
        .juguete
            bottom -115px
            width 120px
            &:before
                bottom 85px
                right 115px
            &:after
                bottom 45px
@media screen and (max-width 1100px)
    .home_nuestro_aliados .bx-wrapper
        max-width 540px !important
        figure
            width 170px !important
            img
                display block
                width 100%
                height auto
@media screen and (max-width 960px)


    .home_banner
        .juguete
            display none
        .home_banner__slider_list__item
            height 400px

@media screen and (max-width 768px)
    .home_siempre_informados .title h2
        font-size 30px
        &:after
            display none
    .home_banner .arrow_scroll
        left 0
        right 0
        display block
        text-align center
    .home_nuestro_aliados .bx-wrapper
        max-width 360px !important
@media screen and (max-width 480px)

    .home_banner
        .home_banner__slider_list__item
            height 360px
    .home_nuestro_aliados .bx-wrapper
        max-width 180px !important
