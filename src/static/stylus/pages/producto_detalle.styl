@media screen and (max-width 768px)
    .matchcota-detalle .container .cnt-descripcion
        .title-main
            text-align center
            .cnt-share
                float inherit
                display block
    .matchcota-detalle .container .cnt-descripcion .acordeon li
        .title
            a
                padding 12px 15px
        .text-content .content-caract
            .caract
                h3
                    font-size 18px
                &__hogar
                    margin-right 0px

@media screen and (max-width 480px)
    .matchcota-detalle .container .cnt-descripcion .acordeon li
        .title
            a
                padding 12px 8px
    .matchcota-detalle .container .cnt-descripcion .acordeon li .text-content p
            font-size 14px
    .matchcota-detalle .container .cnt-descripcion .acordeon li .text-content .content-caract
            .caract
                flex-wrap wrap
                h3
                    font-size 16px
    .matchcota-detalle .container .cnt-descripcion .acordeon li .title
            a
                font-size 14px
            .text
                min-width 165px
    .matchcota-detalle .container .cnt-descripcion
        width 98%
    .matchcota-detalle .container .preview-img .conoce_mascota__title
        font-size 20px
